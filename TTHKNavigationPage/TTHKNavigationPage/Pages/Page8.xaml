<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TTHKNavigationPage.Pages.Page8">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="EntryText" Placeholder="Введи текст.."/>
            <Label x:Name="VolumeValue" Text="Уровень громкости : 1" Font="20"/>
            <Stepper x:Name="VolumeStepper" Maximum="1" Increment="0.1" HorizontalOptions="Fill" Value="1" ValueChanged="Stepper_OnValueChanged" />
            <Button HorizontalOptions="Fill" Text="Прослушать" Clicked="Button_OnClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>